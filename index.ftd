-- end: ftd.column


-- boolean $at-hyderabad: false  

-- component web-page:
children wrapper:

-- ftd.column:
width.fixed.px: 650
height.fixed.px: 350
children: $web-page.wrapper
padding-top.px: 60

-- end: ftd.column

-- end: web-page

-- component card:
caption title: Default Title
body description: Default body
ftd.image-src img: $assets.files.pc-prashant-gautam.jpg
ftd.color bg-color: #e5e4d1

-- ftd.row:
width.fixed.px: 650
height.fixed.px: 350
background.solid: $card.bg-color
border-radius.px: 20
padding.px: 20
spacing.fixed.px: 50
classes if { !at-hyderabad }: kuchbhicard
classes: kuchaurcard


-- ftd.image:
src: $card.img
height: fill-container
border-radius.px: 20



-- ftd.column:

-- ftd.text: $card.title
role: $inherited.types.heading-medium

-- ftd.text: $card.description
role: $inherited.types.copy-regular



-- end: ftd.column

-- end: ftd.row



-- end: card
